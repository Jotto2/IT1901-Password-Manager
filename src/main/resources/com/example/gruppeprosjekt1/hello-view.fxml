<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" maxHeight="420.0" maxWidth="420.0" minHeight="420.0" minWidth="420.0" prefHeight="420.0" prefWidth="420.0" spacing="20.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.gruppeprosjekt1.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <VBox fx:id="loginPage" alignment="CENTER">
      <children>
         <TextField fx:id="usernameInput" maxWidth="100.0" minWidth="50.0" prefWidth="100.0">
            <VBox.margin>
               <Insets />
            </VBox.margin>
         </TextField>
         <TextField fx:id="passwordInput" maxWidth="100.0" minWidth="50.0" prefWidth="100.0" />
         <GridPane maxWidth="200.0" minWidth="200.0" prefWidth="200.0">
           <columnConstraints>
             <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
             <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
           </columnConstraints>
           <rowConstraints>
             <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
           </rowConstraints>
            <children>
                <Button fx:id="registerButton" onAction="#onRegisterButtonClick" prefHeight="26.0" prefWidth="100.0" text="Register" GridPane.halignment="CENTER" />
               <Button fx:id="loginButton" onAction="#onLoginButtonClick" prefHeight="26.0" prefWidth="100.0" text="Login" GridPane.columnIndex="1" GridPane.halignment="CENTER" />
            </children>
         </GridPane>
      </children>
   </VBox>
</VBox>
